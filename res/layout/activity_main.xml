<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Text2"
        android:layout_margin="0dp"
        android:text="=" 
        android:onClick="btnHandler"/>
    	

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/equals"
        android:layout_alignLeft="@+id/equals"
        android:text="" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:text="" 
       />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minus"
        android:layout_alignLeft="@+id/minus"
        android:text="+" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/RightComma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/plus"
        android:layout_toLeftOf="@+id/plus"
        android:text=")" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/LeftComma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RightComma"
        android:layout_toLeftOf="@+id/RightComma"
        android:text="(" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LeftComma"
        android:layout_alignBottom="@+id/LeftComma"
        android:layout_toLeftOf="@+id/LeftComma"
        android:onClick="StuffButtons"
        android:text="C" 
        />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RightComma"
        android:layout_below="@+id/RightComma"
        android:text="9" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Clear"
        android:layout_below="@+id/LeftComma"
        android:text="7" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RightComma"
        android:layout_toLeftOf="@+id/RightComma"
        android:text="8" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:text="6" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        android:text="3" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/equals"
        android:layout_toLeftOf="@+id/equals"
        android:text="&lt;-" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/six"
        android:layout_alignBottom="@+id/six"
        android:layout_alignLeft="@+id/seven"
        android:text="4" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/six"
        android:layout_toLeftOf="@+id/six"
        android:text="5" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backspace"
        android:layout_alignLeft="@+id/four"
        android:text="1" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/equals"
        android:layout_alignLeft="@+id/one"
        android:text="0" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/three"
        android:layout_toLeftOf="@+id/three"
        android:text="2" 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/backspace"
        android:layout_alignBottom="@+id/backspace"
        android:layout_toRightOf="@+id/zero"
        android:text="." 
        android:onClick="StuffButtons"/>

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:text="-" 
        android:onClick="StuffButtons"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Text2"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/Clear"
        android:layout_toLeftOf="@+id/Clear" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gridView1"
                android:layout_width="match_parent"
                android:layout_height="1155dp"
                android:numColumns="5" >
            </GridView>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignRight="@+id/editText1" 
        android:textAlignment="center"/>

</RelativeLayout>